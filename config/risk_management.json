{
  "portfolio": {
    "max_exposure_percent": {
      "total": 80,
      "per_asset": {
        "BTC": 40,
        "ETH": 30,
        "default": 10
      }
    },
    "max_drawdown_percent": 15,
    "diversification": {
      "min_assets": 3,
      "asset_correlation_threshold": 0.7
    }
  },
  "trade_risk": {
    "position_sizing": {
      "method": "fixed_percentage",
      "percentage": 5,
      "adjust_for_volatility": true
    },
    "stop_loss": {
      "enable": true,
      "percent": 5,
      "trailing": false
    },
    "take_profit": {
      "enable": true,
      "percent": 15
    }
  },
  "market_risk": {
    "volatility_threshold": 0.3,
    "market_correlation_threshold": 0.8,
    "market_trend_override": false
  },
  "alerts": {
    "high_risk_threshold": 70,
    "extreme_risk_threshold": 90,
    "notify_on_threshold_breach": true
  },
  "risk_models": {
    "var": {
      "confidence_level": 0.95,
      "time_horizon_days": 1
    },
    "stress_testing": {
      "scenarios": ["market_crash", "liquidity_crisis", "regulatory_event"],
      "max_acceptable_loss_percent": 25
    }
  },
  "a2a": {
    "market_analysis_agent": "http://market-analysis-agent:8001",
    "trade_execution_agent": "http://trade-execution-agent:8002",
    "reporting_analytics_agent": "http://reporting-analytics-agent:8004"
  }
}